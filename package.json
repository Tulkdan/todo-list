{
  "name": "svelte-todo-list",
  "version": "1.0.0",
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "rollup": "^1.12.0",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-svelte": "^5.0.3",
    "rollup-plugin-terser": "^4.0.4",
    "svelte": "^3.0.0"
  },
  "dependencies": {
    "firebase": "^6.4.0",
    "sirv-cli": "^0.4.4",
    "tailwindcss": "^1.1.2"
  },
  "scripts": {
    "tailwind:css": "tailwind build src/css/tailwind.src.css -c tailwind.js -o public/tailwind.css",
    "build": "rollup -c",
    "autobuild": "rollup -c -w",
    "dev": "npm run tailwind:css && run-p start:dev autobuild",
    "start": "sirv public --single",
    "start:dev": "sirv public --single --dev"
  }
}
